@model EnergyConsumptionRationing.Models.Organization

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить запись</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <dl class="dl-horizontal">
            <dt>Название организации</dt>
            <dd>
                @Html.EditorFor(model => model.OrganizationName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrganizationName, "", new { @class = "text-danger" })
            </dd>

            <dt>Форма собственности</dt>
            <dd>
                @Html.EditorFor(model => model.FormOwnership, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FormOwnership, "", new { @class = "text-danger" })
            </dd>

            <dt>Адрес</dt>
            <dd>
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </dd>

            <dt>Ф.И.О. руководителя</dt>
            <dd>
                @Html.EditorFor(model => model.NameLeader, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameLeader, "", new { @class = "text-danger" })
            </dd>

            <dt>Телефон руководителя</dt>
            <dd>
                @Html.EditorFor(model => model.PhoneLeader, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneLeader, "", new { @class = "text-danger" })
            </dd>

            <dt>Ф.И.О. главного инженера</dt>
            <dd>
                @Html.EditorFor(model => model.NameEngineer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameEngineer, "", new { @class = "text-danger" })
            </dd>

            <dt>Телефон главного инженера</dt>
            <dd>
                @Html.EditorFor(model => model.PhoneEngineer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneEngineer, "", new { @class = "text-danger" })
            </dd>
        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
